@model SpecialMomentsViewModel

<section id="SpecialMomentPage">
    <div class="container">
        <div class="row">
            <h1 class="section-header">Xüsusi məqamlar</h1>

            <div class="row justify-content-between pb-4">
                @foreach (SpecialMoment specialMoment in @Model.specialMoments)
                {
                    <div class="special-time-card">
                        <img src="./assets/img/Upload/@specialMoment.SpecialMomentImages[0].Image" class="special-time-image">
                        <p class="history">@specialMoment.Time.ToString("dd MMMM hh:mm yyyy")</p>
                        <p class="special-time-name">@specialMoment.Title</p>
                        <a  asp-action="Info" asp-route-id="@specialMoment.Id" class="other-things mt-1 d-flex align-items-center">
                            Bax
                            <svg width="22" height="11" viewBox="0 0 22 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M15.1687 0C15.1687 2.80894 18.211 5.0935 21.9531 5.0935H22V5.9065H21.9531C18.211 5.9065 15.1687 8.19106 15.1687 11H14.3154C14.3154 8.82927 15.8344 6.92683 18.0958 5.9065H0V5.0935H18.0958C15.8344 4.06911 14.3154 2.17073 14.3154 0"
                                  fill="#232323" />
                            </svg>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

</section>